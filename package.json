{
  "private": true,
  "scripts": {
    "bootstrap": "yarn && yarn dependencies && yarn nbstripout:install && yarn development",
    "development": "pip install -r requirements-development.txt",
    "nbstripout:install": "conda install -y nbstripout && nbstripout --install",
    "dependencies": "cross-os dependencies",
    "dependencies:darwin:win32": "conda install --file requirements-dependencies-only.txt",
    "dependencies:linux": "export INSTALL_ON_LINUX=1 && pip install -r requirements-dependencies-only.txt",
    "conda:create": "conda create -y --name pmp python=3.7 && yarn conda:activate && yarn bootstrap",
    "conda:delete": "conda env remove -y --name pmp",
    "conda:activate": "conda activate pmp"
  },
  "cross-os": {
    "dependencies": {
      "win32": "yarn dependencies:darwin:win32",
      "darwin": "yarn dependencies:darwin:win32",
      "linux": "yarn dependencies:linux"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "nbstripout --is-installed"
    }
  },
  "name": "pymedphys",
  "devDependencies": {
    "cross-os": "1.3.0",
    "husky": "^1.3.1"
  }
}