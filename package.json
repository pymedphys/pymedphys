{
  "name": "pymedphys",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && yarn nbstripout:install && yarn install:dev",
    "docker:internal": "yarn install:prod",
    "git:clean": "git clean -fxd",
    "git:undo": "git reset --soft HEAD~1",
    "install:dev": "yarn lerna:bootstrap:dev && pip install -e .",
    "install:prod": "yarn lerna:bootstrap:prod && pip install .",
    "lerna:bootstrap:dev": "lerna bootstrap",
    "lerna:bootstrap:prod": "lerna bootstrap -- --production",
    "lerna:build": "lerna run build",
    "lerna:upload": "lerna run upload",
    "nbstripout:install": "pip install nbstripout && nbstripout --install",
    "netlify": "yarn netlify:install && yarn netlify:build",
    "netlify:install": "yarn lerna:bootstrap:prod && pip install .[docs]",
    "netlify:build": "sphinx-build -W docs docs/_build/html",
    "pypi:build": "python setup.py sdist bdist_wheel",
    "pypi:upload": "twine upload dist/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "nbstripout --is-installed"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.3"
  }
}