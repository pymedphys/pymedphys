{
  "name": "pymedphys",
  "author": {
    "name": "PyMedPhys",
    "email": "developers@pymedphys.com",
    "url": "https://pymedphys.com"
  },
  "licence": "Apache-2.0",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://pymedphys.com",
  "main": "app/main.js",
  "packageManager": "yarn@3.2.1",
  "build": {
    "productName": "PyMedPhys",
    "appId": "com.pymedphys.app",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node scripts/start.js",
    "build": "webpack --config=scripts/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "fs-jetpack": "^4.3.1",
    "promise-delegate": "^1.0.1"
  },
  "devDependencies": {
    "electron": "19.0.6",
    "electron-builder": "^23.1.0",
    "electron-rebuild": "^3.2.7",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  }
}
