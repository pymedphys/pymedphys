{
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.mypyEnabled": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[python]": {
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.tabSize": 4
  },
  "editor.rulers": [
    80,
    100
  ],
}